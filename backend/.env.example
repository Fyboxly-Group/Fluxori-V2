# Server Configuration
PORT=8080
NODE_ENV=development

# JWT Secret
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
JWT_RESET_SECRET=your_jwt_reset_secret_here

# Database Connection
MONGODB_URI=mongodb://localhost:27017/fluxori-v2

# Google Cloud Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=your-gcp-storage-bucket
GCP_LOCATION=europe-west1  # For Vertex AI (European region)
GCP_KB_STORAGE_BUCKET=your-kb-storage-bucket  # For knowledge base storage

# Vector Search Configuration
EMBEDDING_MODEL=textembedding-gecko@latest
EMBEDDING_DIMENSIONS=768
VECTOR_SEARCH_INDEX_ENDPOINT=your-index-endpoint-id
VECTOR_SEARCH_INDEX_ID=your-index-id
VECTOR_SEARCH_DEPLOYED_INDEX_ID=your-deployed-index-id

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
SKIP_WS_AUTH=false  # Set to true in dev to bypass WebSocket authentication