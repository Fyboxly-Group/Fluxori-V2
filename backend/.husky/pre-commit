#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running TypeScript validation..."

# Run TypeScript validator with stricter validation
node scripts/typescript-validator.js --strict

# Only if TypeScript validation succeeds, run lint-staged
if [ $? -eq 0 ]; then
  echo "âœ… TypeScript validation passed, running lint-staged..."
  npx lint-staged
else
  echo "âŒ TypeScript validation failed, commit rejected"
  exit 1
fi
