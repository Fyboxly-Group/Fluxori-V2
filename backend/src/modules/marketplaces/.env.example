# Marketplace Adapter Environment Variables

# Takealot API Configuration
TAKEALOT_API_BASE_URL=https://seller-api.takealot.com
TAKEALOT_API_VERSION=v1
TAKEALOT_API_TIMEOUT=30000
TAKEALOT_API_MAX_RETRIES=3
TAKEALOT_API_RETRY_DELAY=1000

# Takealot API Credentials (DO NOT commit actual credentials to version control)
# These should be stored in GCP Secret Manager in production
TAKEALOT_API_KEY=your-takealot-api-key
TAKEALOT_API_SECRET=your-takealot-api-secret
TAKEALOT_SELLER_ID=your-takealot-seller-id

# Security
CREDENTIAL_ENCRYPTION_KEY=your-secure-encryption-key-for-credentials

# Logging and Monitoring
ENABLE_MARKETPLACE_DEBUG_LOGGING=false
MARKETPLACE_REQUEST_LOG_LEVEL=info  # debug, info, warn, error